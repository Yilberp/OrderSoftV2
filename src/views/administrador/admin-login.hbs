<!-- login admin -->
<div class="flex justify-center items-center w-full h-screen bg-gray-700 sm:bg-gray-100">
    <div
        class="inline-block align-bottom bg-white rounded-lg text-left overflow-hidden shadow-xl sm:my-8 sm:align-middle sm:max-w-sm sm:w-full">
        <div class="bg-white px-4 pt-5 pb-4 sm:p-6 sm:pb-4">
            <div class="sm:flex sm:items-start">
                <div
                    class="mx-auto flex-shrink-0 flex items-center justify-center h-12 w-12 rounded-full bg-gray-100 sm:mx-0 sm:h-10 sm:w-10">
                    <!-- Heroicon name: outline/user-circle -->
                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewBox="0 0 24 24"
                        stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                            d="M5.121 17.804A13.937 13.937 0 0112 16c2.5 0 4.847.655 6.879 1.804M15 10a3 3 0 11-6 0 3 3 0 016 0zm6 2a9 9 0 11-18 0 9 9 0 0118 0z" />
                    </svg>
                </div>
                <div class="mt-3 text-center w-full sm:mt-0 sm:ml-4 sm:text-left">
                    <h3 class="text-lg leading-6 font-medium text-gray-900" id="modal-title">
                        Iniciar sesion
                    </h3>
                    <div class="mt-2">
                        <form id="form" class="text-gray-700" action="/login/supervisor" method="POST">
                            <label for="">Correo electronico</label>
                            <div class="mt-1 flex rounded-md shadow-sm border border-gray-300 py-1">
                                <input type="email" name="email"
                                    class="flex-1 block w-full border-none focus:ring-0 sm:text-sm" required>
                            </div>

                            <label for="">Contrase√±a</label>
                            <div class="mt-1 flex rounded-md shadow-sm border border-gray-300 py-1">
                                <input type="password" name="contrasena" id="ipt-password2"
                                    class="flex-1 block w-full border-none focus:ring-0 sm:text-sm" required>
                                <button onclick="showHidePassword2()" type="button"
                                    class="inline-flex items-center px-3 focus:outline-none">
                                    <!-- Heroicon name: outline/eye-off -->
                                    <svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" id="eye-off2"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M13.875 18.825A10.05 10.05 0 0112 19c-4.478 0-8.268-2.943-9.543-7a9.97 9.97 0 011.563-3.029m5.858.908a3 3 0 114.243 4.243M9.878 9.878l4.242 4.242M9.88 9.88l-3.29-3.29m7.532 7.532l3.29 3.29M3 3l3.59 3.59m0 0A9.953 9.953 0 0112 5c4.478 0 8.268 2.943 9.543 7a10.025 10.025 0 01-4.132 5.411m0 0L21 21" />
                                    </svg>
                                    <!-- Heroicon name: outline/eye -->
                                    <svg id="eye2" xmlns="http://www.w3.org/2000/svg" class="h-6 w-6 hidden" fill="none"
                                        viewBox="0 0 24 24" stroke="currentColor">
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M15 12a3 3 0 11-6 0 3 3 0 016 0z" />
                                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
                                            d="M2.458 12C3.732 7.943 7.523 5 12 5c4.478 0 8.268 2.943 9.542 7-1.274 4.057-5.064 7-9.542 7-4.477 0-8.268-2.943-9.542-7z" />
                                    </svg>
                                </button>
                            </div>
                            <div class="flex flex-col mt-2">
                                <label class="inline-flex items-center">
                                    <input class="text-red-500 focus:ring-red-400" type="radio" name="id_rol" value="2"
                                        checked required>
                                    <span class="ml-2">Administrador</span>
                                </label>
                                <label class="inline-flex items-center">
                                    <input class="text-red-500 focus:ring-red-400" type="radio" name="id_rol" value="3"
                                        required>
                                    <span class="ml-2">Supervisor</span>
                                </label>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        <div class="bg-gray-50 px-4 py-3 sm:px-6 sm:flex sm:flex-row-reverse">
            <button type="submit" form="form"
                class="w-full inline-flex justify-center rounded-md border border-transparent shadow-sm px-4 py-2 bg-red-600 text-base font-medium text-white hover:bg-red-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-red-500 sm:ml-3 sm:w-auto sm:text-sm">
                Iniciar sesion
            </button>
        </div>
    </div>
</div>
<script src="/js/administrador/admin-login.js"></script>