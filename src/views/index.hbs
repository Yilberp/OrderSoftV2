{{> header}}
<!-- Index -->
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.css" />
<link rel="stylesheet" href="https://unpkg.com/swiper/swiper-bundle.min.css" />
<script src="https://unpkg.com/swiper/swiper-bundle.js"></script>
<script src="https://unpkg.com/swiper/swiper-bundle.min.js"></script>
<style>
    .h-slide {
        height: 42rem;
    }

    @media (max-width: 768px) {
        .h-slide {
            height: 15rem;
        }
    }
</style>
{{> modales}}
<div class="swiper-container z-20  h-slide overflow-hidden">
    <!-- Additional required wrapper -->
    <div class="swiper-wrapper">
        <!-- Slides -->
        <div class="swiper-slide"><img class="w-full object-cover object-center h-slide" src="/img/pizza.jpg" alt="">
        </div>
        <div class="swiper-slide"><img class="w-full object-cover object-center h-slide" src="/img/burger.jpg" alt="">
        </div>
        <div class="swiper-slide"><img class="w-full object-cover object-center h-slide" src="/img/sandwich.jpg" alt="">
        </div>
    </div>
    <!-- If we need pagination -->
    <div class="swiper-pagination swiper-pagination-white"></div>

    <!-- If we need navigation buttons -->
    <div class="swiper-button-prev swiper-button-white"></div>
    <div class="swiper-button-next swiper-button-white"></div>
</div>
{{> footer}}
<script src="/js/index.js"></script>